---
// Footer component
import footerData from "../data/footer.json";

// Dividi i nomi in 2 colonne
const halfIndex = Math.ceil(footerData.Nomi.length / 2);
const column1Names = footerData.Nomi.slice(0, halfIndex);
const column2Names = footerData.Nomi.slice(halfIndex);
---

<footer id="main-footer">
	<div class="footer-columns">
		<div class="footer-column">
			<p class="footer-text">{footerData.diritti}</p>
		</div>

		<div class="footer-column">
			{footerData.Luogo.map(luogo => <p class="footer-text">{luogo}</p>)}
		</div>

		<div class="footer-column">
			{column1Names.map(nome => <p class="footer-text">{nome}</p>)}
		</div>

		<div class="footer-column">
			{column2Names.map(nome => <p class="footer-text">{nome}</p>)}
		</div>

		<div class="footer-column">
			<p class="footer-text">{footerData.Data}</p>
		</div>
	</div>

	<div class="footer-bottom">
		<img
			src="/title.svg"
			alt="Pixar 3D Archive"
			class="footer-archive-svg"
		/>
	</div>
</footer>

<style>
	#main-footer {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 2rem 0;
		border-top: 1px solid #000000;
		width: 100%;
	}

	.footer-columns {
		display: flex;
		justify-content: space-between;
		gap: 2rem;
		padding: 0 1rem;
	}

	.footer-column {
		display: flex;
		flex-direction: column;
		flex-shrink: 0;
	}

	.footer-column:last-child {
		align-items: flex-end;
		text-align: right;
	}

	.footer-text {
		font-family: var(--font-family);
		font-size: var(--font-size);
		font-weight: 600;
		color: #000000;
		margin: 0;
	}

	.footer-bottom {
		width: 100vw;
		position: relative;
		left: 50%;
		right: 50%;
		margin-left: -50vw;
		margin-right: -50vw;
		padding: 1rem 1rem;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.footer-archive-svg {
		width: 100%;
		height: auto;
		max-width: 100%;
		display: block;
	}

	@media (max-width: 768px) {
		.footer-columns {
			flex-wrap: wrap;
			gap: 1.5rem;
			padding: 0 1rem;
		}

		.footer-text {
			font-size: 0.7rem;
		}
	}
</style>
